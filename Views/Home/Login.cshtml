@{
    ViewBag.Title = "Login";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Signup</title>
    <link href="bootstrap.css" rel="stylesheet" />
    <script src="bootstrap.js"></script>
</head>
<body style="background-color:#1d5362">
    <div class="jumbotron" style="background-color:#57b0c1">
        <div class="container text-center">
            <h1 style="color:black">Add Posting Sign in</h1>
        </div>
    </div>
    <div class="container">

        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4" style="background-color:aliceblue">
                <h1 class="text-center login-title">Sign in to continue</h1>
                <div class="account-wall">
                    <center><img class="profile-img" src="" alt=""></center>
                    <form class="form-signin" action="Loginfun" method="post">
                        <input type="email" class="form-control" placeholder="Email" name="email" required autofocus><br>
                        <input type="password" class="form-control" placeholder="Password" name="password" required><br>
                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            Sign in
                        </button>
                    </form>
                </div>
                <br />
                <a href="Signup" class="text-center new-account">Create an account </a>
            </div>
        </div>
    </div>

</body>

</html>

